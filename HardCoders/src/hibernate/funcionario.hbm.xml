<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="entidades.Funcionario" table="funcionario">
	
	  <id name="id_pessoa" type="long" column="id_pessoa" length="15">
	   <generator class="assigned"/>
	  </id>
	  
	  <property name="nome" type="string" column="nome" length="100"/>
	  
	  <property name="cpf" type="string" column="cpf" length="14"/>

	  <property name="login" type="string" column="login" length="20"/>
	  
	  <property name="senha" type="string" column="senha" length="20"/>
	  
	  <property name="cargo" type="string" column="cargo" length="20"/>
	  
	  <property name="id_empresa" type="long" column="id_empresa"/>
	  
	  <property name="ativo" type="string" column="ativo" length="1"/>
	  
   </class>

</hibernate-mapping>